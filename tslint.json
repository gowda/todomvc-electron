{
  "defaultSeverity": "error",
  "extends": ["tslint:recommended"],
  "jsRules": {},
  "rules": {
    "max-line-length": [
      true,
      {
        "limit": 80,
        "ignore-pattern": "^import |// |^it"
      }
    ],
    "new-parens": true,
    "no-arg": true,
    "no-bitwise": true,
    "no-conditional-assignment": true,
    "no-consecutive-blank-lines": true,
    "no-console": false,
    "object-literal-sort-keys": false,
    "trailing-comma": [
      true,
      {
        "multiline": {
            "arrays": "always",
            "objects": "always",
            "functions": "never"
        }
      }
    ],
    "space-before-function-paren": [
      true,
      {
        "anonymous": "always",
        "named": "never",
        "asyncArrow": "always"
      }
    ]
  },
  "rulesDirectory": []
}
